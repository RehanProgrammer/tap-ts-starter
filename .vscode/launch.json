    "version": "0.2.0",
    "configurations": [
        {
            "name": "tap-main: debug TS w/o transpile using ts-node",
            "type": "node",
            "request": "launch",
            "args": ["src/tap-main.ts", "--config", "tap-config.json"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
        },
        {
            "name": "target-main: debug TS w/o transpile using ts-node",
            "type": "node",
            "request": "launch",
            "args": ["src/target-main.ts", "--config", "tap-config.json", "<", "lines.txt"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            //"console":"integratedTerminal",
        },
        {
            "name": "target-main: debug using ts-node; use terminal",
            "type": "node",
            "request": "launch",
            "args": ["src/target-main.ts", "--config", "tap-config.json","<","lines.txt"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            //"internalConsoleOptions": "openOnSessionStart",
            "console":"integratedTerminal",
        },
        {
            "name": "aws-hello: debug TS w/o transpile using ts-node",
            "type": "node",
            "request": "launch",
            "args": ["src/aws/aws-hello.ts"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
        },
        {
            "name": "aws-handleFileTrigger: debug TS w/o transpile using ts-node",
            "type": "node",
            "request": "launch",
            "args": ["src/aws-handleFileTrigger.ts", "testdata/test.eml"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
        },
        {
            "name": "tap-main: transpile to JS and run (slow)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/tap-main.ts",
            "args": ["--config", "tap-config.json"],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/js/**/*.js"
            ]
        },
        {
            "name": "Debug parseItem using current opened test file",
            "type": "node",
            "request": "launch",
            "args": ["src/debug-parseItem.ts", "${file}"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}